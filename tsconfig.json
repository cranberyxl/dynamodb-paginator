{
  "compilerOptions": {
    "lib": [
      "es2015",
      "es2016.array.include",
      "es2017.object"
    ],
    "noEmit": true,
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "checkJs": true
  },
  "types": [
    "node"
  ],
  "include": [
    "./lib/*.js",
    "./lib/*.ts",
    "./test/*.js",
  ]
}